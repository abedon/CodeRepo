@model ASPNETCore_Core.Models.EncoreMatch

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>EncoreMatch</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EncoreID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="EncoreID" class ="form-control" asp-items="ViewBag.EncoreID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MatchType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="MatchType" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(MatchTypeEnum)))"></select>
                <span asp-validation-for="MatchType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Prize" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Prize" class="form-control" />
                <span asp-validation-for="Prize" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TicketsWon" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TicketsWon" class="form-control" />
                <span asp-validation-for="TicketsWon" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Encores" asp-action="Details" asp-route-id="@ViewBag.EncoreIDValue">Back to Encore List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
