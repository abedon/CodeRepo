@model ASPNETCore_Core.Models.Encore

@{
    ViewData["Title"] = "Check";
}

<h2>Check</h2>

@if (Context.Request.Method.ToUpper() == "GET")
{
<form asp-action="Check">
    <div class="form-horizontal">
        <h4>Encore</h4>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LottoType" class="col-md-2 control-label">Lotto Type</label>
            <div class="col-md-10">
                <select asp-for="LottoType" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(LottoTypeEnum)))"></select>
                <span asp-validation-for="LottoType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DrawDate" class="col-md-2 control-label">Draw Date</label>
