                <select asp-for="DrawType" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(DrawTypeEnum)))"></select>
                <span asp-validation-for="DrawType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WinninNumber" class="col-md-2 control-label">Your Encore Number</label>
