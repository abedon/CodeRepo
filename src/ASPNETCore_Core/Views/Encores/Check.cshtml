                <input asp-for="WinninNumber" class="form-control" />
                <span asp-validation-for="WinninNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Check" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
